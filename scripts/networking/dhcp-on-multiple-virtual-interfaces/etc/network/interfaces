# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

source /etc/network/interfaces.d/*

# The loopback network interface
auto lo
iface lo inet loopback


# GW virtual interface virtual0 00:90:0b:ff:10:5b
allow-hotplug virtual0
iface virtual0 inet dhcp
      # Mandatory comment, otherwise does not work :D


# Virtual interface virtual1 00:90:0b:ff:11:5b
allow-hotplug virtual1
iface virtual1 inet dhcp
      # Mandatory comment, otherwise does not work :D


# Virtual interface virtual2 00:90:0b:ff:12:5b
allow-hotplug virtual2
iface virtual2 inet dhcp
      # Mandatory comment, otherwise does not work :D


# LAN interface
auto eth3
iface eth3 inet static
      address 172.16.8.254
      netmask 255.255.255.0
      network 172.16.8.0
      broadcast 172.16.8.255

